{
  "name": "kristos80/hooks",
  "description": "A WordPress-style hooks system for PHP - add actions and filters with priority support",
  "autoload": {
    "psr-4": {
      "Kristos80\\Hooks\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kristos80\\Hooks\\Tests\\": "tests"
    }
  },
  "version": "0.0.1",
  "require-dev": {
    "pestphp/pest": "^3.8",
    "infection/infection": "^0.31.2"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "infection/extension-installer": true
    }
  }
}
